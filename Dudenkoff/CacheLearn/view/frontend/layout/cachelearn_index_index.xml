<?xml version="1.0"?>
<!--
    IMPORTANT: This page is set to cacheable="false" so you can see 
    the dynamic content changes (like Current Time) in real-time.
    
    This demonstrates the difference between:
    - Full Page Cache (FPC) - caches entire HTML page
    - Block Cache - caches individual blocks
    - Custom Cache - caches specific data (what we're teaching)
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      cacheable="false">
    <body>
        <referenceContainer name="content">
            <block class="Dudenkoff\CacheLearn\Block\CacheDemo" 
                   name="cache.demo" 
                   template="Dudenkoff_CacheLearn::demo.phtml"
                   cacheable="false"/>
        </referenceContainer>
    </body>
</page>

