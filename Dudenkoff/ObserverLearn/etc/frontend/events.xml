<?xml version="1.0"?>
<!--
/**
 * Frontend Events Configuration
 * 
 * Events registered here ONLY work in the FRONTEND area.
 * They won't trigger in admin, API, or cron.
 * 
 * USE CASES:
 * - Frontend-specific functionality
 * - Customer-facing features
 * - Shopping experience modifications
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <!-- Listen to customer registration success (frontend only) -->
    <event name="customer_register_success">
        <observer name="dudenkoff_welcome_email" 
                  instance="Dudenkoff\ObserverLearn\Observer\Frontend\CustomerRegisterObserver" />
    </event>

    <!-- Listen to add to cart event (frontend only) -->
    <event name="checkout_cart_add_product_complete">
        <observer name="dudenkoff_track_add_to_cart" 
                  instance="Dudenkoff\ObserverLearn\Observer\Frontend\AddToCartObserver" />
    </event>

</config>

